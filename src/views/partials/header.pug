header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout")  Log Out
        li  
          a(href=`/users/${userInfo._id}`)
            if userInfo.avatarUrl === "" || !userInfo.avatarUrl
              img.header__avatar(src="/uploads/avatar/basic_profile.png")
            else
              img(onerror="this.src='/uploads/avatar/NoImage.png'").header__avatar(src="/" + userInfo.avatarUrl)
      else
        li
          a(href="/login") Login
        li
          a(href="/join").header__btn Join