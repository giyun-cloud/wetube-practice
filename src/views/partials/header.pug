header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul
      li 
        form(action="/search", method="get").header__search
          input(placeholder="Search by title", name="keyword", required)
          button 
            i.fas.fa-search
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout")  Log Out
        li  
          a(href=`/users/${userInfo._id}`)
            img(onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png'",src=userInfo.avatarUrl).header__avatar
      else
        li
          a(href="/login") Login
        li
          a(href="/join").header__btn Join