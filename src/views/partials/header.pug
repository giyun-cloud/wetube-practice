header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout")  Log Out
        li  
          a(href=`/users/${userInfo._id}`)
            if userInfo.socialOnly
              img(onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg'",src=userInfo.avatarUrl).header__avatar
            else
              img(onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg'",src="/" + userInfo.avatarUrl).header__avatar
      else
        li
          a(href="/login") Login
        li
          a(href="/join").header__btn Join