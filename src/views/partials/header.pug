header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout")  Log Out
        li  
          a(href=`/users/${userInfo._id}`)
              img(onerror="this.src='/uploads/avatar/NoImage.png'",src="/" + userInfo.avatarUrl).header__avatar
      else
        li
          a(href="/login") Login
        li
          a(href="/join").header__btn Join